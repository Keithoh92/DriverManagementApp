<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_colour"
    android:elevation="10dp"
    tools:context=".MainActivity">

    <include
        android:id="@+id/management_dashboard_toolbar"
        layout="@layout/toolbar_management"
        android:elevation="10dp"></include>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="631dp"
        android:text="08/11/2020"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/management_dashboard_toolbar" />

    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Notify Drivers"
        android:textColor="#e3792d"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="513dp"
        android:background="#1c1a19"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading1"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/messageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="276dp"
            android:layout_marginLeft="276dp"
            android:layout_marginEnd="65dp"
            android:layout_marginRight="65dp"
            android:background="#1c1a19"
            android:shadowColor="#e3792d"
            android:shadowRadius="45"
            android:text="Drivers"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/driverButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/driverButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginEnd="114dp"
            android:layout_marginRight="114dp"
            android:layout_marginBottom="11dp"
            android:background="#1c1a19"
            android:shadowColor="#e3792d"
            android:shadowRadius="45"
            android:text="Messages"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/messageButton"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/command1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="How many deliveries are ready"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/heading1"
        app:layout_constraintTop_toBottomOf="@+id/heading1" />

    <Button
        android:id="@+id/not1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/button_round"
        android:elevation="10dp"
        android:text="1"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/command1"
        app:layout_constraintTop_toBottomOf="@+id/command1" />

    <Button
        android:id="@+id/not2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:background="@drawable/button_round"
        android:text="2"
        android:elevation="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/not1"
        app:layout_constraintStart_toStartOf="@+id/command1" />

    <Button
        android:id="@+id/not3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="108dp"
        android:background="@drawable/button_round"
        android:text="3"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/not2"
        app:layout_constraintStart_toStartOf="@+id/command1" />

    <Button
        android:id="@+id/not4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="160dp"
        android:background="@drawable/button_round"
        android:elevation="10dp"
        android:text="4"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/not3"
        app:layout_constraintStart_toStartOf="@+id/command1" />

    <!--        app:layout_constraintStart_toEndOf="@+id/not4"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/management_dashboard_toolbar" />-->

    <Button
        android:id="@+id/not5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="144dp"
        android:background="@drawable/button_round"
        android:elevation="10dp"
        android:text="5"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/not4"
        app:layout_constraintStart_toEndOf="@+id/not4"
        app:layout_constraintTop_toBottomOf="@+id/management_dashboard_toolbar" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="16dp"
        android:elevation="10dp"
        android:background="@drawable/button_corners"
        android:text="Clear all"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/not5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/not5"
        app:layout_constraintTop_toBottomOf="@+id/management_dashboard_toolbar" />

    <Spinner
        android:id="@+id/locationSpinner"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginEnd="134dp"
        android:layout_marginRight="134dp"
        android:layout_marginBottom="349dp"
        android:background="@drawable/spinner_bg"
        android:elevation="10dp"
        android:popupBackground="@android:color/white"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/not1"
        tools:listitem="" />

    <Button
        android:id="@+id/sendNotifications"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/button_corners"
        android:elevation="10dp"
        android:text="Send notification"
        app:layout_constraintStart_toStartOf="@+id/locationSpinner"
        app:layout_constraintTop_toBottomOf="@+id/locationSpinner" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="312dp"
        android:layout_marginRight="312dp"
        android:elevation="10dp"
        android:text="Message"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sendNotifications"
        app:layout_constraintTop_toBottomOf="@+id/sendNotifications" />

    <Spinner
        android:id="@+id/messageSpinner"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/spinner_bg"
        android:popupBackground="@android:color/white"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:background="#FFFFFF"
        android:elevation="10dp"
        android:ems="10"
        android:hint="Custom message"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#040303"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/messageSpinner"
        app:layout_constraintTop_toBottomOf="@+id/messageSpinner" />

    <Button
        android:id="@+id/chooseRecipients"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_corners"
        android:elevation="10dp"
        android:text="Choose recipents"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextMessage"
        app:layout_constraintTop_toBottomOf="@+id/editTextMessage" />

    <TextView
        android:id="@+id/chosenRecipients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/chooseRecipients"
        app:layout_constraintTop_toBottomOf="@+id/chooseRecipients" />

    <Button
        android:id="@+id/sendMessage"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/button_corners"
        android:elevation="10dp"
        android:text="Send"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editTextMessage"
        app:layout_constraintTop_toTopOf="@+id/chooseRecipients" />

</androidx.constraintlayout.widget.ConstraintLayout>